generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  tag String @unique
  email String @unique
  password String
  createdAt DateTime @default(now())

  posts Post[]
}

model Post {
  id Int @id @default(autoincrement())
  body String
  createdAt DateTime @default(now())
  owner User @relation(fields: [ownerId], references: [id])
  ownerId Int

  predecessorId Int? @unique
  predecessor Post? @relation("Replyes", fields: [predecessorId], references: [id])

  successor Post? @relation("Replyes")
}
